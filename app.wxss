/**app.wxss**/
page{
  height: 100%;
  overflow: hidden;
}
.normal_font{
  font-size: 28rpx;
  color: #666;
}
.ac{
  text-align: center;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/*模态框*/
.wxapp-modal{
 width: 100%;
 height: 100%;
 position: fixed;
 top: 0px;
 left: 0px;
 z-index:999;
}
.wxapp-modal .content{
 width: 90%;
 top: 10%;
 text-align: center;
 position: absolute;
 left:5%;
 background:#ffffff;
 border-radius: 8px;
 z-index:999;
 overflow: hidden;
}
.wxapp-modal .content .header{
 margin: auto;
 width: 93%;
 height: 60rpx;
 line-height: 60rpx;
 text-align: center;
 border-bottom: 1px #eee solid;
}
.wxapp-modal .content .body{
 margin: auto;
 width: 93%;
 background-color: #FFFFFF;
 position: relative;
 z-index:9999;
 
 overflow: hidden;
}
.wxapp-modal .content .footer{
 margin: auto;
 width: 100%;
 height: 80rpx;
 line-height: 80rpx;
 margin-top: 10px;
 text-align: center;
}
.wxapp-modal .content .footer button{
 display: inline-block;
 width: 50%;
 height: 80rpx;
 line-height: 80rpx;
 background-color: #FFFFFF;
 margin-left: 0px;
 border-radius: 0px;
}
.wxapp-modal .content .footer .confirm:active{
 color: #ffffff;
 background: #FFB487;
}
.wxapp-modal .content .footer .cancel:active{
 color: #ffffff;
 background: #ccc;
}
.wxapp-modal .content .footer button::after{
 content:none;
}
.wxapp-modal .content .footer .cancel{
 color: #666;
 border-right: 1px #eee solid;
 
}
.wxapp-modal .content .footer .confirm{
 color: #FFB487;
}
.wxapp-modal .mask{
 width: 100%;
 height: 100%;
 position: fixed;
 top: 0px;
 background-color:rgba(0,0,0,0.5);
}
