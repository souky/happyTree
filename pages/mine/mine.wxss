/* pages/mine/mine.wxss */
page{
  overflow-y: hidden;
}
.mine_head {
  width: 100%;
}
.mine_head .hear_img{
  width:128rpx;
  height: 128rpx;
  margin:10% auto 20rpx auto;
  border-radius: 50%;
  overflow: hidden;
}
.mine_head .hear_img image{
  width:128rpx;
  height: 128rpx;
}
.mine_head .hear_name{
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  color: #666;
}
.pop_menu{
  width: 100%;
  margin: 30rpx auto auto auto;
  position: relative;
  height:calc(100% - 248rpx);
}
.pop_menu .items{
  border-radius: 50%;
  box-shadow: 3px 4px 10px rgba(170,170,170,0.4);
  color:#fff;
  text-align: center;
  position: absolute;
  font-size:44rpx;
}
.pop_menu .items.record{
  width: 380rpx;
  height: 380rpx;
  line-height: 380rpx;
  background: #8FDBFF;
  left:60rpx;
  top:0px;
  z-index: 1;
  animation: breath_animate 3s linear infinite;
}
.pop_menu .items.account{
  width: 300rpx;
  height: 300rpx;
  line-height: 300rpx;
  background: #FF90B6;
  left:380rpx;
  top:80rpx;
  z-index: 1;
  animation: breath_animate 3s linear infinite;
}
.pop_menu .items.target{
  width: 300rpx;
  height: 300rpx;
  line-height: 300rpx;
  background: #A992FF;
  left:100rpx;
  top:320rpx;
  z-index: 4;
  animation: breath_animate 3s linear infinite;
}
.pop_menu .items.friends{
  width: 340rpx;
  height: 340rpx;
  line-height: 340rpx;
  background: #FFCE87;
  left:340rpx;
  top:340rpx;
  z-index: 1;
  animation: breath_animate 3s linear infinite;
}

@keyframes breath_animate
{
  0% {transform: scale(1,1);}
  
  50% {transform: scale(1.03,1.03);}
  
  100% {transform: scale(1,1);}
}