#friends{
  padding-top:20rpx;
}

#friends .fri_s{
  width:96%;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
  margin:auto;
}
#friends .fri_s .items{
  width: 14%;
  height: 110rpx;
  margin:20rpx 1%;
}
#friends .fri_s .items .img{
  width: 80rpx;
  height: 80rpx;
  margin:auto;
}
#friends .fri_s .items .img image{
  width: 100%;
  height: 100%;
}
#friends .fri_s .items .names{
  text-align: center;
  width: 100%;
  height: 30rpx;
}
#friends .fri_s .items .names.active{
  color:#FFCE87;
}