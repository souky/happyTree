/* pages/rank/rank.wxss */
#rank{
  height: 100vh;
}
#rank .rank_query{
  width: 94%;
  height:100rpx;
  display: flex;
  font-size:30rpx;
  margin:auto;
  /* border-bottom:1rpx #c7c7c7 solid; */
}
#rank .rank_query .times{
  width:60%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color:#666;
}
#rank .rank_query .btn{
  width:14%;
  height: 50rpx;
  line-height: 50rpx;
  background: #8FDBFF;
  border-radius: 3px;
  text-align: center;
  color:#fff;
  margin:25rpx 3%;
}
#rank .rank_query .btn.add{
  background: #FF90B6;
}

#rank .rank_list{
  width:94%;
  margin:auto;
  /* border-bottom:1rpx #c7c7c7 solid; */
}
#rank .rank_list .warning{
  height: 180rpx;
  line-height: 180rpx;
}

#rank .rank_list .items{
  width:94%;
  margin:auto;
  display: flex;
  height:60rpx;
  line-height: 60rpx;
}
#rank .rank_list .items .rank_num{
  width:40rpx;
  text-align: center;
}
#rank .rank_list .items .rank_name{
  width: calc(100% - 240rpx);
}
#rank .rank_list .items .rank_option{
  width: 200rpx;
  display: flex;
}
#rank .rank_list .items .rank_option .btns{
  width: 100rpx;
  text-align: center;
}
#rank .rank_list .items .rank_option .btns image{
  width: 40rpx;
  height: 40rpx;
  margin:10rpx auto;
}

#rank .uesr_list{
  width:94%;
  margin: 20rpx auto;
  height:calc(100vh - 320rpx);
}
#rank .uesr_list .context{
  position: relative;
  border-radius: 4px;
  overflow: hidden;
  margin:20rpx auto;
}
#rank .uesr_list .items{
  display: flex;
  width: 100%;
  position: absolute;
  left: 0px;
  top:20rpx;
  height: 100rpx;
}
#rank .uesr_list .items .left_part{
  width: 100rpx;
  text-align: center;
  height: 100rpx;
  border-radius:50%;
  overflow: hidden;
  margin-left:20rpx;
}
#rank .uesr_list .items .left_part image{
  width: 100rpx;
  height: 100rpx;
}

#rank .uesr_list .items .center_part{
  width: calc(100% - 180rpx);
  height: 100rpx;
  margin:auto 20rpx;
}
#rank .uesr_list .items .center_part .user_name{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  color:#fff;
}

#rank .uesr_list .items .right_part{
  width: 60rpx;
  height: 100rpx;

}
#rank .uesr_list .items .right_part .setting_rank{
  width: 60rpx;
  height: 100rpx;
  text-align: center;
}
#rank .uesr_list .items .right_part .setting_rank image{
  width:40rpx;
  height:40rpx;
  margin-top:30rpx;

}