<view class="container">
  
  
  <view class="section">
    <input class='login_input' type='text' placeholder='登陆名/手机号' name='loginName'></input>
  </view>
  <view class="section">
    <input class='login_input' password type="text" placeholder='密码' name='password'></input>
  </view>
  
  <view class='p_botton'>
    <button type="primary" bindtap='defLogins' size="default"> 登陆 </button>
  </view>
  
  <view class='p_botton'>
    <button type="primary" open-type="getUserInfo" lang="zh_CN" bindgetuserinfo='wxLogins' size="default"> 微信登陆 </button>
  </view>
  
</view>

